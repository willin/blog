{
  "private": true,
  "name": "willin.wang",
  "version": "0.0.1",
  "description": "R3mix of Willin.Wang",
  "author": "Willin Wang <willin@willin.org> (https://willin.wang/)",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "npm run contentlayer:build && remix build",
    "dev": "remix dev --manual -c \"npm run start\"",
    "start": "wrangler pages dev  --compatibility-flags=nodejs_compat --compatibility-date=2023-08-15 ./public --local",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "typecheck": "tsc",
    "contentlayer:build": "contentlayer build",
    "contentlayer:dev": "contentlayer dev",
    "prepare": "husky install"
  },
  "dependencies": {
    "@octokit/plugin-throttling": "^8.1.3",
    "@octokit/rest": "^20.0.2",
    "@remix-run/cloudflare": "^2.0.0",
    "@remix-run/cloudflare-pages": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "classnames": "^2.3.2",
    "contentlayer": "^0.3.4",
    "dayjs": "^1.11.10",
    "isbot": "^3.6.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.5.1",
    "remix-auth-sso": "^0.0.2",
    "remix-i18n": "^1.0.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230914.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@remix-run/dev": "^2.0.0",
    "@remix-run/eslint-config": "^2.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "conventional-changelog-cli": "^2.2.2",
    "daisyui": "^4.4.6",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "mdx-bundler": "^10.0.1",
    "prettier": "^3.1.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "remark-github": "^12.0.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "wrangler": "^3.17.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx|vue)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx|vue)": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "@contentlayer/cli@0.3.4": "patches/@contentlayer__cli@0.3.4.patch"
    }
  }
}
